<Window
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
Title="4DCT group name change" MaxHeight="600" Width="300" SizeToContent="WidthAndHeight">
	<DockPanel Name="mainDockPanel">
		<DockPanel Name="CTgroupDockPanel" DockPanel.Dock="Top">
			<TextBlock Text="Please select a group of 4DCT whose name is to be changed" HorizontalAlignment ="Left" TextWrapping="Wrap" Margin="5" TextAlignment="Center" DockPanel.Dock="Top"/>
			<ComboBox x:Name="CTgroupCombo" HorizontalAlignment="Center" Margin="10" DockPanel.Dock="Top" Width="120"/>
		</DockPanel>
		<StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
			<Button Content="OK" Width="50" Margin="5" Click="OKClicked"/>
			<Button Content="Cancel" Width="50" Margin="5" Click="CancelClicked"/>
		</StackPanel>
	</DockPanel>
</Window>