<Window
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
x:Name="Caption" Title="title" MaxHeight="600" Width="300" SizeToContent="WidthAndHeight">
<DockPanel Name="mainDockPanel">
	<StackPanel Orientation="Vertical" HorizontalAlignment="Center" DockPanel.Dock="Top">
		<TextBlock x:Name = "msg" Text="text" TextWrapping="Wrap" Margin="10" TextAlignment="Center" DockPanel.Dock="Top"/>
	</StackPanel>
	<StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
		<Button Content="OK" Width="50" Margin="5" Click="OK_Clicked"/>
	</StackPanel>
</DockPanel>
</Window>