<Window
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="With or not Marker" MaxHeight="600" Width="300" SizeToContent="WidthAndHeight">
 <Grid>
  <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
         <TextBlock Text="With or no Marker?" Margin="0 0 0 10"/>
         <RadioButton Content="Yes"  Name="YesRadioButton" Margin="0 0 0 5"/>
         <RadioButton Content="No"   Name="NoRadioButton"/>
         <Button Content="Confirmed" Name="ConfirmButton" Margin="0 10 0 0" Click="ConfirmButton_Click">
  </StackPanel>
 </Grid>
</Window>