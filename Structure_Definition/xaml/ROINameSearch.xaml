<Window
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
Title="Respiration ROI" MaxHeight="600" Width="300" SizeToContent="WidthAndHeight">
	<DockPanel Name="mainDockPanel">
		<DockPanel Name="RoiSearchDock" DockPanel.Dock="Top">
			<TextBlock Text="Please input ROI name" HorizontalAlignment ="Left" TextWrapping="Wrap" Margin="5" TextAlignment="Center" DockPanel.Dock="Top"/>
			<TextBox x:Name="RoiNameText" HorizontalAlignment="Center" Margin="10" DockPanel.Dock="Top" Width="120"/>
		</DockPanel>
		<StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
			<Button Content="OK" Width="50" Margin="5" Click="OKClicked"/>
			<Button Content="Cancel" Width="50" Margin="5" Click="CancelClicked"/>
		</StackPanel>
	</DockPanel>
</Window>