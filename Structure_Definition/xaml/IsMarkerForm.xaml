<Window
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
Title="With or not Marker" MaxHeight="600" Width="300" SizeToContent="WidthAndHeight">
<DockPanel Name="mainDockPanel">
	<StackPanel Orientation="Vertical" HorizontalAlignment="Center" DockPanel.Dock="Top">
		<TextBlock Text="Please select the presence or absence of marker" TextWrapping="Wrap" Margin="5" TextAlignment="Center" />
		<ComboBox x:Name="IsMarkerCombo" SelectionChanged="IsMarkerCombo_Changed" HorizontalAlignment="Center" Margin="10" DockPanel.Dock="Top" Width="120">
			<x:String>With Marker</x:String>
			<x:String>Without Marker</x:String>
		</ComboBox>
	</StackPanel>
	<StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
		<Button Content="OK" Width="50" Margin="5" Click="OK_Clicked"/>
		<Button Content="Cancel" Width="50" Margin="5" Click="Cancel_Clicked"/>
	</StackPanel>
</DockPanel>
</Window>