<Window
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:System="clr-namespace:System;assembly=mscorlib"
Title="Add Clinical Goal Setting" MaxHeight="600" Width="300" SizeToContent="WidthAndHeight">
<DockPanel Name="mainDockPanel">
	<DockPanel Name="PartDockPanel"
				   DockPanel.Dock="Top">
			<TextBlock
				Name="MessageText"
				Text="Please input the part of irradiation"
				HorizontalAlignment ="Left"
				TextWrapping="Wrap"
				Margin="5"
				TextAlignment="Center"
				DockPanel.Dock="Top"/>
			<TextBox
				Name="NewTextBox"
				HorizontalAlignment ="Left"
				TextWrapping="Wrap"
				Width="150"
				Margin="5"
				TextAlignment="Right"
				DockPanel.Dock="Top"/>
	</DockPanel>
	<StackPanel DockPanel.Dock="Bottom"
					Orientation="Horizontal"
					HorizontalAlignment="Right">
			<Button Content = "Add"
					Width="50"
					Margin="10"
					Click="AddClicked"/>
			<Button Content="Cancel"
					Width="50"
					Margin="10"
					Click="CancelClicked"/>
		</StackPanel>
</DockPanel>
</Window>